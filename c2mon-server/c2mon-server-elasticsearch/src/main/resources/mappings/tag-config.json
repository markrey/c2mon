{
  "_routing": {
    "required": true
  },
  "dynamic_templates": [
    {
      "nested_metadata_template": {
        "mapping": {
          "type": "keyword",
          "index": true
        },
        "match_mapping_type": "string",
        "path_match": "metadata.*"
      }
    }
  ],
  "properties": {
    "id": {
      "type": "long"
    },
    "name": {
      "type": "keyword",
      "index": true
    },
    "description": {
      "type": "text",
      "index": true
    },
    "metadata": {
      "type": "object",
      "dynamic": "true"
    },
    "unit": {
      "type": "keyword",
      "index": true
    },
    "mode":{
      "type": "keyword",
      "index": true
    },
    "c2mon": {
      "dynamic": "true",
      "properties": {
        "dataType": {
          "type": "keyword",
          "index": true
        },
        "process": {
          "type": "keyword",
          "index": true
        },
        "equipment": {
          "type": "keyword",
          "index": true
        },
        "subEquipment": {
          "type": "keyword",
          "index": true
        },
        "logged": {
          "type": "boolean"
        },
        "value": {
          "type": "double"
        },
        "valueBoolean": {
          "type": "boolean"
        },
        "valueString": {
          "type": "keyword",
          "index": "true"
        },
        "valueObject": {
          "type": "object",
          "dynamic": "true"
        }
      }
    },
    "timestamp": {
      "type": "date",
      "format": "epoch_millis"
    }
  }
}
